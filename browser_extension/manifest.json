{
  "manifest_version": 3,
  "name": "AI Image Detector",
  "version": "1.2",
  "description": "Hover over any image to check if it's AI. If AI, Gemini gives a reason.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>", "https://generativelanguage.googleapis.com/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "page_context.js",
        "ort.min.js",
        "ort-wasm.wasm",
        "ort-wasm-simd.wasm",
        "onnx_model.onnx"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "AI Image Detector",
    "default_popup": "popup/popup.html"
  }
}
